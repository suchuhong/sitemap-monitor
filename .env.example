DB_URL=libsql://<turso-url>
DB_AUTH_TOKEN=<token>
CRON_TOKEN=<random-long-token>
WEBHOOK_SECRET=<hmac-secret>
APP_BASE_URL=http://localhost:3000

# 调度器配置
ENABLE_INTERNAL_SCHEDULER=true
SCAN_CRON_SCHEDULE=*/5 * * * *
SCHEDULER_TIMEZONE=Asia/Shanghai
ENABLE_DAILY_SUMMARY=true
# 若需禁用内置调度器，可以设置
# SCHEDULER_TYPE=disabled
# DISABLE_INTERNAL_SCHEDULER=true

# 邮件渠道配置
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASS=secret
EMAIL_SMTP_SECURE=false
EMAIL_FROM="Sitemap Monitor <noreply@example.com>"

# Slack 渠道超时（可选，默认 8000ms）
# SLACK_TIMEOUT_MS=8000

# Webhook 渠道超时（可选，默认 8000ms）
# WEBHOOK_TIMEOUT_MS=8000
